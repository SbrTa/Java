<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="patient" class="org.roy.spring.Patient" scope="prototype">
        <property name="id" value="1"></property>
        <property name="name" value="SbrTa"></property>
        <property name="address" ref="address"></property>
    </bean>

    <bean id="address" class="org.roy.spring.Address">
        <property name="street" value="Rampura"></property>
        <property name="postcode" value="1001"></property>
    </bean>
</beans>